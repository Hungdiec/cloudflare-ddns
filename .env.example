# Cloudflare API Token (create at https://dash.cloudflare.com/profile/api-tokens)
CLOUDFLARE_API_TOKEN=your_api_token_here

# Cloudflare Zone ID (found in your domain's overview page)
CLOUDFLARE_ZONE_ID=your_zone_id_here

# Multiple DNS record names to update (comma separated)
# Examples:
# RECORD_NAMES=home.yourdomain.com,office.yourdomain.com,@
# RECORD_NAMES=subdomain1.example.com,subdomain2.example.com
RECORD_NAMES=your_record_names_here

# For backward compatibility, single record still works:
# RECORD_NAME=single.yourdomain.com

# Update interval in seconds (default: 300 = 5 minutes)
UPDATE_INTERVAL=300